<?php

$command = $argv[1] ?? null;
$name = $argv[2] ?? null;

switch ($command) {
    case 'serve':
        echo "ðŸš€ Starting MVC server at http://127.0.0.1:8000\n";
        exec("php -S 127.0.0.1:8000 -t public");
        break;

    case 'make:controller':
        if (!$name) {
            echo "âŒ Please specify a controller name. Example: php mvc make:controller HomeController\n";
            exit;
        }
        createFile("app/controllers/$name.php", getControllerTemplate($name));
        echo "âœ… Controller '$name' created successfully!\n";
        break;

    case 'make:model':
        if (!$name) {
            echo "âŒ Please specify a model name. Example: php mvc make:model User\n";
            exit;
        }
        createFile("app/models/$name.php", getModelTemplate($name));
        echo "âœ… Model '$name' created successfully!\n";
        break;

    case 'make:view':
        if (!$name) {
            echo "âŒ Please specify a view name. Example: php mvc make:view home\n";
            exit;
        }
        createFile("views/$name.php", getViewTemplate($name));
        echo "âœ… View '$name' created successfully!\n";
        break;

    default:
        echo "âŒ Unknown command.\n";
        echo "Available commands:\n";
        echo "  php mvc serve                - Start the development server\n";
        echo "  php mvc make:controller Name - Create a new controller\n";
        echo "  php mvc make:model Name      - Create a new model\n";
        echo "  php mvc make:view Name       - Create a new view\n";
        break;
}

function createFile($filePath, $content)
{
    $fullPath = __DIR__ . '/' . $filePath;

    if (file_exists($fullPath)) {
        echo "âš ï¸ File '$filePath' already exists!\n";
        return;
    }

    if (!is_dir(dirname($fullPath))) {
        mkdir(dirname($fullPath), 0777, true);
    }

    file_put_contents($fullPath, $content);
}

function getControllerTemplate($name)
{
    return "<?php\n\nrequire_once __DIR__ . '/../core/Controller.php';\n\nclass $name extends Controller\n{\n    public function index()\n    {\n        \$this->view('" . strtolower($name) . "');\n    }\n}\n";
}

function getModelTemplate($name)
{
    return "<?php\n\nclass $name\n{\n    public function __construct()\n    {\n        // Database connection can be added here\n    }\n}\n";
}

function getViewTemplate($name)
{
    return "<h1>Welcome to $name page!</h1>";
}
